
<% if false #not doing customer mode for now%>
	<% if get_current_user.has_key? 'customerMode'%>
		<% currentMode =get_current_user['customerMode']['customerId']%>
	<% else %>
		<% currentMode = 0 %>
	<% end %>
	<%= form_for :person, url: {controller: "person", action: "changeMode", id:get_current_user['_id']}, method: "PATCH" , class: "nifty_form" do |f| %>
		Mode: <%= select("person[customerMode]", "customerId", options_for_select( $customer_collection.find().to_a.collect {|c| [ c['customerName'], c['_id'] ] } , currentMode),  {include_blank: 'All'}) %>
		<%= f.submit "Change Mode"%>
	<% end %><br><br>
<% end %>


