<h2> Edit User Form:</h2>
<%= @person %>
<%= @roleHash%>
<%= form_for :person, url: {controller: 'person', action: 'update', id: @person['_id']}, method: :patch do |f| %>
<p>
	<%= f.label :email, "Email" %>
	<%= text_field_tag 'person[email]', "#{@person['email']}" %><br>
	
	<%= f.label :password, "Password" %>
	<%= text_field_tag 'person[password]', "#{@person['password']}" %>
	
	<p> 
 		Person's Role:<br><br>
		<%#= radio_button("person", "role", "cite manager") %> <!-- cite manager --> 

		<%= radio_button_tag("person[role]", @roles[0], @preroleHash[@roles[0]])  %> Project Manager Admin: Can read / write project milestones list <br><br>
		<%= radio_button_tag("person[role]", @roles[1], @preroleHash[@roles[1]]) %> Project Manager: Can read / write project milestones list and orders  <br><br>
		
		<%= radio_button_tag("person[role]", @roles[2], @preroleHash[@roles[2]]) %> Admin: full access
	</p>
	
	<%= f.label :name, "Name" %>
	<%= text_field_tag 'person[name]', "#{@person['name']}" %>
	
	<p>
		<%= f.label :notes, "Enter any additional notes" %><br>
		<%= text_field_tag 'person[notes]', "#{@person['notes']}" %>
	</p>
	
	
	<p>
    	<%= f.submit "Submit" %>
  	</p>
	
</p>
	
<% end %>