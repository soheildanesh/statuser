

<h2> New Project:</h2>

<%= form_for :project, url: '/project' do |f| %>
	
	<p>
		<%= f.label :projName, "3SN Project Name" %><br>
		<%= f.text_field :projName%>
	</p>
	
	<p>
		<%= f.label :program, "3SN Program" %><br>
		<%= f.text_field :program%>
	</p>
	
	<p>
		<%= f.label :program, "Type" %><br>
		<%= f.text_field :projType%>
	</p>
	
	
	<p>
		<%= f.label :client, "Client" %><br>
		<%= f.text_field :client%><br>
	</p>
	
	<p>
		<%= f.label :customerId, "3SN Customer ID" %><br>
		<%= f.text_field :customerId%>
	</p>
	
	<p>
		<%= f.label :operatorId, "3SN Operator ID" %><br>
		<%= f.text_field :operatorId%>
	</p>
	
	<p>
		<%= f.label :projManager, "3SN Project Manager" %><br>
		<%= f.text_field :projManager%>
	</p>
	
	<p>
		<%= f.label :projManager, "3SN Project Controller" %><br>
		<%= f.text_field :projController%>
	</p>
	
	<p>
		<%= f.label :startDate, "Start Date" %><br>
		<%= f.text_field :startDate%>
	</p>
	
	<p>
		<%= f.label :endDate, "End Date" %><br>
		<%= f.text_field :endDate%>
	</p>
	
	<p>
    	<%= f.label :siteId, "Site ID" %><br>
		<% if @site.nil? %>
			<%= f.text_field :siteId, :class => 'siteidInput'%>
		<% else %>
			<%= f.text_field :siteId, :value => @site["siteId"], :class => 'siteidInput'%> 
		<% end %>
  	</p>	
	<%= f.submit "Submit" %>
	
<%end%>
<br>
