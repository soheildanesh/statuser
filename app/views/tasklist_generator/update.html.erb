	Choose Action:<br>
	<%= select_tag("actionSelect", options_for_select([['Set Start Date', 'set start date'], ['Set Due Date', 'set due date'], ['Mark Done', 'mark done'], ['Undo Mark Done', 'undo mark done']]), {include_blank: 'none'} ) %>
