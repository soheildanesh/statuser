<div style="float:left; ">
	<%= form_for :todolist, url: {controller: 'todolist', action: 'create'}, html: {id: "todolistForm"} do |f| %>
	
	    
		<%= text_field_tag "projectId",  @projId, style:"display:none;"  %><br>
		
		<%= text_field_tag "date",  @date, style:"display:none;"  %><br>
	
		Todo List Name<br>
		<%= f.text_field "todolist name", class: 'textField' %><br><br><br>
		<hr>
		<br><br>
		
		Tasks: <br>
		
		<%= f.text_field "[tasks][0][description]", class: 'textField task' %><br><br>
	 	

		<%# for i in 1 .. 10 %>
			<%#= f.text_field "[tasks][#{i}]", class: 'textField' %><br><br>
		<%# end %>
		
	
		<%= f.submit "Add More Tasks" %>
		
	<% end %>

</div>