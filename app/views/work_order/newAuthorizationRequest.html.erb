<%= form_for :work_order, url: '/work_order' do |f| %>

	<input type="hidden" name="work_order[parentWoId]" value='<%= @parentWoId %>' />
	
	<%if @type == 'crInquiry'%>
		<b>New Change Request Inquiry:</b><br>
		<input type="hidden" name="work_order[type]" value='CR Inquiry>Authorization Request' />
	<% elsif @type == 'crReport'%>
		<b>New Change Request Report:</b><br>
		<input type="hidden" name="work_order[type]" value='CR Report>Authorization Request' />
	<% end %>


	<%#= f.label :workOderId, "Enter Work Order ID (Will create random unique id if left blank)" %>
	<%#= f.text_field :workOderId %><br>
	
	<p>
		<%= f.label :workOrderId, "3SN Id" %><br>
		<%= f.text_field :workOrderId, :value => rand(999999)%> 
	</p>
	
	
	
	<p>
		<%= f.label :description, "Description" %><br>
		<%= f.text_area :description %><br>
	</p>
	
	<p>
		<%= f.label :customerPm, "Customer PM"%><br>
		<%= f.text_field :customerPm %><br>
	</p>
	
	<p>
		<%= f.label :projMan, "Site Project Manager" %>
		<%= f.text_field :projMan, "class" => "personInput", style: 'width:200px; display:none;', size:10%><br>
	</p>
	
	<p>
    	<%= f.label :siteId, "Site ID" %><br>
		<% if @site.nil? %>
			<%= f.text_field :siteId, :class => 'siteidInput'%>
		<% else %>
			<%= f.text_field :siteId, :value => @site["siteId"], :class => 'siteidInput'%> 
		<% end %>
  	</p>
	
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %><br>
	
	<%= f.label :description, "Description" %>
	<%= f.text_field :description %><br>
	
	<%= f.label :customerPm, "Customer PM"%>
	<%= f.text_field :customerPm %><br>
	
	<%= f.label :threeSFM, "3SN FM"%>
	<%= f.text_field :threeSFM %><br>
	

	
	
	<p>
    	<%= f.label :siteId, "Site ID" %><br>
		<% if @site.nil? %>
			<%= f.text_field :siteId, :class => 'siteidInput'%>
		<% else %>
			<%= f.text_field :siteId, :value => @site["siteId"], :class => 'siteidInput'%> 
		<% end %>
    
  	</p>	
	<%= f.submit "Submit" %>
	
<%end%>
<br>
